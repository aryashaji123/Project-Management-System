                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <div>
                        <h3>Bug Reporter</h3>
                        <div class="card shadow p-3">
                            <div class="card shadow ">

                                <div class="card-body">
                                    <div class="table-responsive-sm table-responsive-lg table-responsive-xl">

