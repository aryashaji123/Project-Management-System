    <style>
        .scrollcmt {
            width: 265px;
            height: 87%;
            overflow: scroll;
        }

            .scrollcmt::-webkit-scrollbar-track {
                -webkit-box-shadow: inset 0 0 6px rgba(237,239,245,.1);
                background-color: #F5F5F5;
            }

            .scrollcmt::-webkit-scrollbar {
                width: 3px;
                background-color: #edeff5;
            }

            .scrollcmt::-webkit-scrollbar-thumb {
                background-color: #edeff5;
                border: 2px solid #c1c1c1;
            }
    </style>



    <style type="text/css">
        /*task edit popup date*/

        span.name {
            float: none !important;
            padding-left: 0px;
        }

        span.namestatus {
            float: none !important;
            padding-left: 50px;
        }


        /* Removes the clear button from date inputs */
        input[type="date"]::-webkit-clear-button {
            display: none;
        }

        /* Removes the spin button */
        input[type="date"]::-webkit-inner-spin-button {
            display: none;
        }

        /* Always display the drop down caret */
        input[type="date"]::-webkit-calendar-picker-indicator {
            color: #2c3e50;
        }

        /* A few custom styles for date inputs */
        input[type="date"] {
            -webkit-appearance: none;
            color: #858796;
            font-family: "Helvetica", arial, sans-serif;
            font-size: 12px;
            border: none;
            /*background: #ecf0f1;*/
            padding: 1px;
            display: inline-block !important;
            visibility: visible !important;
            width: 92px;
            font-weight: bold;
        }

        input[type="date"], focus {
            color: #858796;
            box-shadow: none;
            -webkit-box-shadow: none;
            -moz-box-shadow: none;
        }



        .fnt-for {
            font-size: 12px;
            font-weight: bold;
        }

        span.namedate {
            float: none !important;
            padding-left: 35px;
        }
    </style>
</head>
